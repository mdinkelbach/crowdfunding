<div class="card">
  <div>
    <h2 class="card-header">
      {{title}}
    </h2>
    <p>Posted by {{user.name}} on {{format_date date_created}}</p>
  </div>
  <div class="card-body">
    <p>
      {{content}}
    </p>
  </div>
</div>
{{#each comments as |comment| }}
<div class="card">
    <div>
        <div class="card-body">
            <p>
                {{comment.content}}
            </p>
            <p>
                - {{comment.user.name}}, {{format_date comment.date_created}}
            </p>
        </div>
    </div>
</div>
{{/each}}
{{#if logged_in}}
<div class="card">
  <form class="comment-form" data-id="{{id}}">
    <div>
      <p>Comment:</p>
      <input class="form-input" type="text" id="comment-content" data-id="{{id}}"/>
    </div>
    <button class="btn btn-primary" type="submit">Post Comment</button>
  </form>
</div>

<script src="../js/comment.js"></script>
{{/if}}